{
  "version": 3,
  "script": {
    "version": "1.0.0",
    "changeLog": "Upgraded Prowlarr install script to be compatible with latest HexOS script changes"
  },
  "requirements": {
    "locations": ["ApplicationsPerformance"],
    "specifications": ["2CORE", "200MB"],
    "permissions": ["READ_WRITE_LOCATIONS"],
    "ports": [9696]
  },
  "ensure_directories_exists": [
    {
      "path": "$LOCATION(ApplicationsPerformance)",
      "network_share": true
    },
    "$LOCATION(ApplicationsPerformance)/prowlarr/config"
  ],
  "app_values": {
    "storage": {
      "config": "$HOST_PATH($LOCATION(ApplicationsPerformance)/prowlarr/config)"
    },
    "resources": {
      "limits": {
        "cpus": 2,
        "memory": "$MEMORY(10%, 2048)"
      }
    }
  }
}